package Github;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.edge.EdgeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class Launchbrowser {

	public static void main(String[] args) {

		//Launch Chrome
		//Define the Chrome driver with the .exe location for the chrome driver
		System.setProperty("webdriver.chrome.driver", "F:\\Working Projects\\Selenium_Java\\App\\chromedriver.exe");
		WebDriver chromeDriver = new ChromeDriver();
		
		//Launch Edge
		//Define the Edge driver with the .exe location for the Edge driver
		System.setProperty("webdriver.edge.driver", "F:\\Working Projects\\Selenium_Java\\App\\msedgedriver.exe");
		WebDriver edgeDriver = new EdgeDriver();
		
		//Launch Firefox
		//Define the Gecko driver with the .exe location for the Gecko driver
		System.setProperty("webdriver.gecko.driver", "F:\\Working Projects\\Selenium_Java\\App\\geckodriver.exe");
		WebDriver fireFoxDriver = new FirefoxDriver();

	}

}
